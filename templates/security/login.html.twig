{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <!-- Stylesheets-->
    <link rel="stylesheet" type="text/css" href="../login-css/stylesheets/util.css">
    <link rel="stylesheet" type="text/css" href="../login-css/stylesheets/main.css">
{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w" method="POST"><span class="login100-form-title p-b-32">Login</span><span class="txt1 p-b-11">Username</span>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {% if error %}
                        <div style="background-color: pink; padding: 1rem;">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required"><input class="input100" input value="{{ last_username }}" name="username" id="inputUsername" autofocus><span class="focus-input100"></span></div><span class="txt1 p-b-11">Password</span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required"><span class="btn-show-pass"><i class="fa fa-eye"></i></span><input class="input100" type="password" name="password" id="inputPassword"><span class="focus-input100"></span></div>
                    <div class="container-login100-form-btn"><button class="login100-form-btn" type="submit" style="margin-top: 20px;">Login</button></div>
                </form>
            </div>
        </div>
    </div>
    <!--Other scripts-->
    <script src="../admin/scripts/main.js"></script>
{% endblock %}
