        <li>
            <a href="{{ url('student') }}">
                <span>Dashboard</span>
            </a>
        </li>
    </ul>
    <ul class="nav nav-main">
        <li class="nav-active">
            <a href="{{ url('propose_referendum') }}">
                <span>Propose Referendum</span>
            </a>
        </li>
    </ul>
    <ul class="nav nav-main">
        <li>
            <a href="{{ url('view_all_proposals_student') }}">
                <span>All Proposed Referendums</span>
            </a>
        </li>
