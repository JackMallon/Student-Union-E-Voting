{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <!-- Stylesheets-->
    <link rel="stylesheet" type="text/css" href="../login-css/stylesheets/util.css">
    <link rel="stylesheet" type="text/css" href="../login-css/stylesheets/main.css">
    <link rel="stylesheet" href="assets/css/main.css" />
    <link rel="stylesheet" href="assets/css/style.css" />

    <style>
        html body {
            background-color: #014c6c;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="page-wrapper" style="padding-top: 5em" >
        <!-- Nav -->
        <nav id="nav">
            <ul>
                <li><a href="{{ url('home') }}">Home</a></li>
                <li><a href="{{ url('about') }}">About</a></li>
                <li><a href="{{ url('upcoming') }}">Upcoming</a></li>
                <li><a href="{{ url('contact') }}">Contact</a></li>
                <li><a href="{{ url('app_login') }}">Log In</a></li>
            </ul>
        </nav>


        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    <form class="login100-form validate-form flex-sb flex-w" method="POST">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><span class="login100-form-title p-b-32">Login</span>
                        {% if error %}
                            <div style="background-color: pink; padding: 1rem; width: 100%; margin-bottom: 1em;">
                                Username of password are invalid
                            </div>
                        {% endif %}
                        <span class="txt1 p-b-11">Username</span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required"><input class="input100" input value="{{ last_username }}" name="username" id="inputUsername" autofocus><span class="focus-input100"></span></div><span class="txt1 p-b-11">Password</span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required"><span class="btn-show-pass"></span><input class="input100" type="password" name="password" id="inputPassword"><span class="focus-input100"></span></div>
                        <div class="container-login100-form-btn"><button class="login100-form-btn" type="submit" style="margin-top: 20px;">Login</button></div>
                    </form>
                </div>
            </div>
        </div>
        <!--Other scripts-->
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/jquery.dropotron.min.js"></script>
        <script src="assets/js/browser.min.js"></script>
        <script src="assets/js/breakpoints.min.js"></script>
        <script src="assets/js/util.js"></script>
        <script src="assets/js/main.js"></script>
    </div>

{% endblock %}
