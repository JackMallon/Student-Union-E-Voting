{% extends 'admin/base.html.twig' %}

{% block title %}Admin | Upcoming{% endblock %}

{% block body %}
        <div class="inner-wrapper">
            <!-- start: sidebar -->
            <aside id="sidebar-left" class="sidebar-left">

                <div class="sidebar-header">
                    <div class="sidebar-title">
                        Navigation
                    </div>
                    <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                        <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation">
                            <hr class="separator" />
                            <ul class="nav nav-main">
                                <li>
                                    <a href="{{ url('admin') }}">
                                        <span>Dashboard</span>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-main">
                                <li class="nav-active">
                                    <a href="{{ url('admin_upcoming') }}">
                                        <span>Upcoming</span>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-main">
                                <li>
                                    <a href="{{ url('create_referendum') }}">
                                        <span>Create Referendum</span>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-main">
                                <li>
                                    <a href="{{ url('past_referendums') }}">
                                        <span>Past Referendums</span>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-main">
                                <li>
                                    <a href="{{ url('manage_admins') }}">
                                        <span>Administrators</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>

            </aside>
            <!-- end: sidebar -->

            <section role="main" class="content-body">
                <header class="page-header">
                    <h2>Upcoming</h2>
                </header>

                <div class="row">
                    <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                <h2 class="panel-title">Upcoming Referendums</h2>
                                <p class="panel-subtitle">This is a list of the upcoming referendums.</p>
                            </header>
                            <div class="panel-body">

                                {% set counter = 0 %}
                                {% for referendum in referendums %}

                                    <h4>{{ referendum.title }}</h4>
                                    <p>
                                        {{ referendum.details }}
                                    </p>
                                    <p><strong>Date of referendum: {{ referendum.startDate }}</strong></p>

                                    <form method="post" action="#" onsubmit="return ;">
                                        <input type="hidden" name="_method" value="POST">
                                        <input type="hidden" name="proposal_id">
                                        <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">
                                            See details
                                        </button>
                                    </form>


                                    {% if counter < refArrayLength %}
                                        <hr>
                                    {% endif %}
                                    {% set counter = counter + 1 %}
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}


                            </div>
                        </section>
                    </div>
                </div>

                <!-- end: page -->
            </section>
        </div>
    </section>
{% endblock %}